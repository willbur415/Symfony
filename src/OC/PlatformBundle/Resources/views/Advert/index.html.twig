{% extends "@OCPlatform/layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}
    <h2>Liste des annonces</h2>

    <ul>
        {% for advert in listAdverts %}
            <li>
                <a href="{{ path('oc_platform_view', {'id': advert.id}) }}">
                    {{ advert.title }}
                </a>
                par {{ advert.author }},
                le {{ advert.date|date('d/n/Y') }}
            </li>
            {% else %}
            <li>Il n'y a pas encore d'annonces</li>
        {% endfor %}
    </ul>
{% endblock %}